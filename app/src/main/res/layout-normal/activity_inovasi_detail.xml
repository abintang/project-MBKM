<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    tools:context=".activities.InovasiDetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_detail_inovasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_ios_new_24">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/monstserrat_semibold"
                android:layout_gravity="center"
                android:textSize="@dimen/_16sdp"
                android:layout_height="wrap_content"
                android:text="@string/dt_inovasi"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/iv_foto_inovasi_detail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_190sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/inovasi"
        app:layout_constraintTop_toBottomOf="@id/d"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

            <com.github.captain_miao.optroundcardview.OptRoundCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:optRoundCardBackgroundColor="@color/white"
                app:optRoundCardCornerRadius="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@id/guideline0">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    android:scrollbars="none">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintGuide_percent="0.01" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.07" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.93" />

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardkategori"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="@id/guideline2"
                            app:cardElevation="0dp"
                            app:strokeColor="@color/green_smooth"
                            app:strokeWidth="@dimen/_1sdp"
                            app:cardUseCompatPadding="true"
                            app:contentPadding="@dimen/_4sdp"
                            app:layout_constraintTop_toBottomOf="@id/guideline1">

                            <TextView
                                android:id="@+id/tv_category_inovasi_detail"
                                android:layout_width="wrap_content"
                                android:textAlignment="center"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_medium"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@color/green_smooth"
                                android:text="Kuliner"/>

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/tv_nama_inovasi_detail"
                            android:layout_width="@dimen/_220sdp"
                            android:layout_height="wrap_content"
                            android:text="Teh Pala (Limbah Kulit Pala)"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:fontFamily="@font/monstserrat_semibold"
                            android:textSize="@dimen/_13sdp"
                            app:layout_constraintStart_toStartOf="@id/guideline2"
                            app:layout_constraintTop_toBottomOf="@id/cardkategori" />

                        <TextView
                            android:id="@+id/tv_alamat_inovasi_detail"
                            android:layout_width="@dimen/_220sdp"
                            android:layout_height="wrap_content"
                            android:text="Dramaga"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/gray_text"
                            android:fontFamily="@font/monstserrat_semibold"
                            app:layout_constraintStart_toStartOf="@id/guideline2"
                            app:layout_constraintTop_toBottomOf="@id/tv_nama_inovasi_detail"
                            />

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/title_deskripsi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/cardInstansi"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginEnd="@dimen/_20sdp"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:strokeWidth="@dimen/_1sdp"
                            app:strokeColor="@color/gray">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <androidx.constraintlayout.widget.Guideline
                                    android:id="@+id/guideline5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    app:layout_constraintGuide_percent="0.10" />

                                <androidx.constraintlayout.widget.Guideline
                                    android:id="@+id/guideline6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    app:layout_constraintGuide_percent="0.04" />

                                <androidx.constraintlayout.widget.Guideline
                                    android:id="@+id/guideline7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    app:layout_constraintGuide_percent="0.96" />

                                <TextView
                                    android:id="@+id/title_des"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toBottomOf="@id/guideline5"
                                    app:layout_constraintStart_toStartOf="@id/guideline6"
                                    android:text="@string/title_deskripsi"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_11sdp"/>

                                <com.codesgood.views.JustifiedTextView
                                    android:id="@+id/tv_deskripsi_inovasi_detail"
                                    android:layout_width="@dimen/_240sdp"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toBottomOf="@id/title_des"
                                    app:layout_constraintStart_toStartOf="@id/guideline6"
                                    android:textColor="@color/gray_text"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:textSize="@dimen/_9sdp"
                                    android:text="@string/dummy_deskripsi"
                                    android:layout_marginTop="@dimen/_4sdp"/>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_10sdp"
                                    app:layout_constraintTop_toBottomOf="@id/tv_deskripsi_inovasi_detail"/>

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/title_manfaat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/title_deskripsi"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginEnd="@dimen/_20sdp"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:strokeWidth="@dimen/_1sdp"
                            app:strokeColor="@color/gray">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <androidx.constraintlayout.widget.Guideline
                                    android:id="@+id/guideline51"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    app:layout_constraintGuide_percent="0.10" />

                                <androidx.constraintlayout.widget.Guideline
                                    android:id="@+id/guideline61"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    app:layout_constraintGuide_percent="0.04" />

                                <androidx.constraintlayout.widget.Guideline
                                    android:id="@+id/guideline71"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    app:layout_constraintGuide_percent="0.96" />

                                <TextView
                                    android:id="@+id/title_man"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toBottomOf="@id/guideline51"
                                    app:layout_constraintStart_toStartOf="@id/guideline61"
                                    android:text="@string/title_manfaat"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_11sdp"/>

                                <com.codesgood.views.JustifiedTextView
                                    android:id="@+id/deskripsi_manfaat_detail"
                                    android:layout_width="@dimen/_240sdp"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toBottomOf="@id/title_man"
                                    app:layout_constraintStart_toStartOf="@id/guideline61"
                                    android:textColor="@color/gray_text"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:textSize="@dimen/_9sdp"
                                    android:text="@string/dummy_manfaat"
                                    android:layout_marginTop="@dimen/_4sdp"/>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_10sdp"
                                    app:layout_constraintTop_toBottomOf="@id/deskripsi_manfaat_detail"/>

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardInovator"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginEnd="@dimen/_20sdp"
                            app:layout_constraintTop_toBottomOf="@id/tv_alamat_inovasi_detail"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:strokeWidth="@dimen/_1sdp"
                            app:strokeColor="@color/gray">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <androidx.constraintlayout.widget.Guideline
                                    android:id="@+id/guideline52"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    app:layout_constraintGuide_percent="0.03" />

                                <androidx.constraintlayout.widget.Guideline
                                    android:id="@+id/guideline62"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    app:layout_constraintGuide_percent="0.04" />

                                <androidx.constraintlayout.widget.Guideline
                                    android:id="@+id/guideline72"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    app:layout_constraintGuide_percent="0.96" />

                                <TextView
                                    android:id="@+id/title_inovator"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    app:layout_constraintTop_toBottomOf="@+id/guideline52"
                                    app:layout_constraintStart_toStartOf="@id/guideline62"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:textSize="@dimen/_11sdp"
                                    android:text="@string/Inovator_mn"/>

                                <com.google.android.material.card.MaterialCardView
                                    android:id="@+id/inovatorCard"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toBottomOf="@id/title_inovator"
                                    android:layout_marginTop="@dimen/_4sdp"
                                    app:cardElevation="1dp"
                                    app:cardCornerRadius="@dimen/_2sdp"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_10sdp">

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <androidx.constraintlayout.widget.Guideline
                                            android:id="@+id/guideline22"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            app:layout_constraintGuide_percent="0.04" />

                                        <androidx.constraintlayout.widget.Guideline
                                            android:id="@+id/guideline23"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            app:layout_constraintGuide_percent="0.67" />

                                        <androidx.constraintlayout.widget.Guideline
                                            android:id="@+id/guideline24"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            app:layout_constraintGuide_percent="0.10" />

                                        <androidx.cardview.widget.CardView
                                            android:id="@+id/card_image"
                                            android:layout_width="@dimen/_40sdp"
                                            android:layout_height="@dimen/_40sdp"
                                            app:cardCornerRadius="@dimen/_6sdp"
                                            app:layout_constraintStart_toStartOf="@id/guideline22"
                                            app:layout_constraintTop_toTopOf="@id/guideline24">

                                            <ImageView
                                                android:id="@+id/iv_foto_inovator_det"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:adjustViewBounds="false"
                                                android:scaleType="centerCrop"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toTopOf="parent"
                                                app:layout_constraintVertical_bias="0.0"
                                                app:srcCompat="@drawable/dump_image_inovator" />
                                        </androidx.cardview.widget.CardView>

                                        <TextView
                                            android:id="@+id/tv_nama_inovator_det"
                                            android:layout_width="@dimen/_100sdp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/_8sdp"
                                            android:layout_marginTop="@dimen/_3sdp"
                                            android:fontFamily="@font/montserrat_medium"
                                            android:text="Wirda Ningsih"
                                            android:textColor="@color/gray_text"
                                            android:textSize="@dimen/_10sdp"
                                            app:layout_constraintStart_toEndOf="@id/card_image"
                                            app:layout_constraintTop_toBottomOf="@id/guideline24" />

                                        <TextView
                                            android:id="@+id/tv_category_inovator_det"
                                            android:layout_width="@dimen/_100sdp"
                                            android:layout_height="wrap_content"
                                            android:text="Masyarakat Umum"
                                            android:textColor="@color/gray_text"
                                            android:fontFamily="@font/montserrat_regular"
                                            android:textSize="@dimen/_8sdp"
                                            android:layout_marginStart="@dimen/_8sdp"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            app:layout_constraintTop_toBottomOf="@id/tv_nama_inovator_det"
                                            app:layout_constraintStart_toEndOf="@id/card_image"/>


                                        <Button
                                            android:id="@+id/button_detail_inovator"
                                            android:layout_width="@dimen/_60sdp"
                                            android:layout_height="@dimen/_28sdp"
                                            android:backgroundTint="@color/green_smooth"
                                            android:elevation="0dp"
                                            android:fontFamily="@font/monstserrat_semibold"
                                            android:text="@string/detail"
                                            android:textAlignment="center"
                                            android:textAllCaps="false"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/_8sdp"
                                            app:elevation="0dp"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintHorizontal_bias="0.515"
                                            app:layout_constraintStart_toEndOf="@id/guideline23"
                                            app:layout_constraintTop_toBottomOf="@id/guideline24"
                                            app:layout_constraintVertical_bias="0.36"
                                            app:shapeAppearanceOverlay="@style/shapeButton" />

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_8sdp"
                                            app:layout_constraintTop_toBottomOf="@id/card_image"/>

                                    </androidx.constraintlayout.widget.ConstraintLayout>
                                </com.google.android.material.card.MaterialCardView>

                                <TextView
                                    android:id="@+id/title_anggota"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    app:layout_constraintTop_toBottomOf="@+id/inovatorCard"
                                    app:layout_constraintStart_toStartOf="@id/guideline62"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:textSize="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:text="@string/anggota_text"/>

                                <com.google.android.material.card.MaterialCardView
                                    android:id="@+id/kelompokCard"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toBottomOf="@id/title_anggota"
                                    android:layout_marginTop="@dimen/_4sdp"
                                    app:cardCornerRadius="@dimen/_2sdp"
                                    app:cardElevation="1dp"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_10sdp">

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <androidx.constraintlayout.widget.Guideline
                                            android:id="@+id/guideline32"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            app:layout_constraintGuide_percent="0.04" />

                                        <androidx.constraintlayout.widget.Guideline
                                            android:id="@+id/guideline33"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            app:layout_constraintGuide_percent="0.72" />

                                        <androidx.constraintlayout.widget.Guideline
                                            android:id="@+id/guideline34"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            app:layout_constraintGuide_percent="0.10" />

                                        <androidx.cardview.widget.CardView
                                            android:id="@+id/card_image_kelompok"
                                            android:layout_width="@dimen/_40sdp"
                                            android:layout_height="@dimen/_40sdp"
                                            app:cardCornerRadius="@dimen/_6sdp"
                                            app:cardElevation="0dp"
                                            app:layout_constraintStart_toStartOf="@id/guideline32"
                                            app:layout_constraintTop_toTopOf="@id/guideline34">

                                            <ImageView
                                                android:id="@+id/kelompok"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:adjustViewBounds="false"
                                                android:scaleType="centerCrop"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toTopOf="parent"
                                                app:layout_constraintVertical_bias="0.0"
                                                app:srcCompat="@drawable/kelompok_image" />
                                        </androidx.cardview.widget.CardView>

                                        <TextView
                                            android:id="@+id/tv_nama_kelompok_det"
                                            android:layout_width="@dimen/_100sdp"
                                            android:layout_height="wrap_content"
                                            android:text="Dummy Text"
                                            android:textColor="@color/gray_text"
                                            android:layout_marginStart="@dimen/_8sdp"
                                            android:fontFamily="@font/montserrat_medium"
                                            android:textSize="@dimen/_10sdp"
                                            android:layout_marginTop="@dimen/_4sdp"
                                            app:layout_constraintStart_toEndOf="@id/card_image_kelompok"
                                            app:layout_constraintTop_toTopOf="@id/guideline34"/>

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_8sdp"
                                            app:layout_constraintTop_toBottomOf="@id/card_image_kelompok"/>

                                    </androidx.constraintlayout.widget.ConstraintLayout>
                                </com.google.android.material.card.MaterialCardView>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_10sdp"
                                    app:layout_constraintTop_toBottomOf="@id/kelompokCard"/>

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardInstansi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/cardInovator"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginEnd="@dimen/_20sdp"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:strokeWidth="@dimen/_1sdp"
                            app:strokeColor="@color/gray">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <androidx.constraintlayout.widget.Guideline
                                    android:id="@+id/guideline55"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    app:layout_constraintGuide_percent="0.10" />

                                <androidx.constraintlayout.widget.Guideline
                                    android:id="@+id/guideline65"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    app:layout_constraintGuide_percent="0.04" />

                                <androidx.constraintlayout.widget.Guideline
                                    android:id="@+id/guideline75"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    app:layout_constraintGuide_percent="0.96" />

                                <androidx.constraintlayout.widget.Guideline
                                    android:id="@+id/guideline76"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    app:layout_constraintGuide_percent="0.71" />

                                <TextView
                                    android:id="@+id/title_instansi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toBottomOf="@id/guideline55"
                                    app:layout_constraintStart_toStartOf="@id/guideline65"
                                    android:text="@string/asl_instansi"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_11sdp"/>

                                <TextView
                                    android:id="@+id/tv_nama_instansi_det"
                                    android:layout_width="@dimen/_150sdp"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toBottomOf="@id/title_instansi"
                                    app:layout_constraintStart_toStartOf="@id/guideline65"
                                    android:textColor="@color/gray_text"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:textSize="@dimen/_9sdp"
                                    android:text="Dummy Text"
                                    android:layout_marginTop="@dimen/_4sdp"/>

                                <Button
                                    android:id="@+id/button_detail_instansi"
                                    android:layout_width="@dimen/_60sdp"
                                    android:layout_height="@dimen/_28sdp"
                                    android:backgroundTint="@color/green_smooth"
