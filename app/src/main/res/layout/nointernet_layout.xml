<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/illust_nointernet"
        android:layout_width="291dp"
        android:layout_height="300dp"
        android:src="@drawable/no_connection_illust"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.368" />

    <TextView
        android:id="@+id/text_no_connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/monstserrat_semibold"
        android:text="@string/no_connection"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/illust_nointernet"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="@id/illust_nointernet"
        app:layout_constraintTop_toBottomOf="@id/illust_nointernet"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:layout_width="354dp"
        android:layout_height="60dp"
        android:fontFamily="@font/monstserrat_semibold"
        android:text="@string/det_no_connection"
        android:textAlignment="center"
        android:textSize="@dimen/_11sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/text_no_connection"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="@id/text_no_connection"
        app:layout_constraintTop_toBottomOf="@id/text_no_connection"
        app:layout_constraintVertical_bias="0.024" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="@dimen/_220sdp"
        android:layout_height="@dimen/_40sdp"
        android:text="@string/coba_lagi"
        android:fontFamily="@font/monstserrat_semibold"
        android:backgroundTint="@color/header_bg"
        android:textAllCaps="false"
        app:cornerRadius="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/text_no_connection"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@id/text_no_connection"
        app:layout_constraintTop_toBottomOf="@id/text_no_connection"
        app:layout_constraintVertical_bias="0.223" />


</androidx.constraintlayout.widget.ConstraintLayout>