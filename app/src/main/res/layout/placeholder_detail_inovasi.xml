<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/placeHolder_detail_inovasi"
    android:layout_height="wrap_content"
    android:background="@color/background">

    <View
        android:id="@+id/iv_foto_inovas"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_190sdp"
        android:background="@color/placeholder_bg"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.36" />

    <com.github.captain_miao.optroundcardview.OptRoundCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:optRoundCardBackgroundColor="@color/white"
        app:optRoundCardCornerRadius="@dimen/_15sdp"
        android:layout_marginTop="-15dp"
        app:layout_constraintTop_toBottomOf="@id/iv_foto_inovas">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.02" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.07" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.93" />

                <View
                    android:id="@+id/cardkategori"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_28sdp"
                    app:layout_constraintStart_toStartOf="@id/guideline2"
                    app:cardElevation="0dp"
                    android:background="@color/placeholder_bg"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="@dimen/_4sdp"
                    app:layout_constraintTop_toBottomOf="@id/guideline1">

                </View>

                <View
                    android:id="@+id/tv_nama_inova"
                    android:layout_width="@dimen/_220sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@color/placeholder_bg"
                    app:layout_constraintStart_toStartOf="@id/guideline2"
                    app:layout_constraintTop_toBottomOf="@id/cardkategori" />

                <View
                    android:id="@+id/tv_alamat_inova"
                    android:layout_width="@dimen/_220sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:background="@color/placeholder_bg"
                    android:layout_marginTop="@dimen/_3sdp"
                    app:layout_constraintStart_toStartOf="@id/guideline2"
                    app:layout_constraintTop_toBottomOf="@id/tv_nama_inova"
                    />

                <View
                    android:id="@+id/title_deskripsi"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70sdp"
                    android:background="@color/placeholder_bg"
                    app:layout_constraintTop_toBottomOf="@id/cardInstansi"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:strokeWidth="@dimen/_1sdp"
                    app:strokeColor="@color/gray"/>

                <View
                    android:id="@+id/title_manfaat"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@color/placeholder_bg"
                    app:layout_constraintTop_toBottomOf="@id/title_deskripsi"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:strokeWidth="@dimen/_1sdp"
                    app:strokeColor="@color/gray"/>

                <View
                    android:id="@+id/cardInovator"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:background="@color/placeholder_bg"
                    app:layout_constraintTop_toBottomOf="@id/tv_alamat_inova"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:strokeWidth="@dimen/_1sdp"
                    app:strokeColor="@color/gray"/>

                <View
                    android:id="@+id/cardInstansi"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:background="@color/placeholder_bg"
                    app:layout_constraintTop_toBottomOf="@id/cardInovator"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:strokeWidth="@dimen/_1sdp"
                    app:strokeColor="@color/gray">

                </View>

                <View
                    android:id="@+id/cardTerkait"
                    android:background="@color/placeholder_bg"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_75sdp"
                    app:layout_constraintTop_toBottomOf="@id/title_manfaat"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:strokeWidth="@dimen/_1sdp"
                    app:strokeColor="@color/gray">

                </View>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    app:layout_constraintTop_toBottomOf="@id/cardTerkait"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </com.github.captain_miao.optroundcardview.OptRoundCardView>

</androidx.constraintlayout.widget.ConstraintLayout>