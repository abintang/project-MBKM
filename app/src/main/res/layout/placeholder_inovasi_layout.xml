<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_3sdp">

    <androidx.cardview.widget.CardView
        android:id="@+id/content_inovasi"
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/white"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content"
        app:contentPaddingTop="@dimen/_10sdp"
        app:contentPaddingBottom="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.02" />

            <View
                android:id="@+id/card_image"
                android:layout_width="@dimen/_48sdp"
                android:layout_height="@dimen/_48sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.087"
                android:background="@color/placeholder_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/guideline3"/>

            <View
                android:id="@+id/tv_nama_inovasi"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:background="@color/placeholder_bg"
                app:layout_constraintBottom_toTopOf="@+id/tv_nama_inovator"
                app:layout_constraintStart_toEndOf="@id/card_image"
                app:layout_constraintTop_toTopOf="@id/guideline3"
                app:layout_constraintVertical_chainStyle="packed" />

            <View
                android:id="@+id/tv_nama_inovator"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/placeholder_bg"
                app:layout_constraintBottom_toTopOf="@+id/tv_category_inovasi"
                app:layout_constraintEnd_toEndOf="@id/tv_nama_inovasi"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/card_image"
                app:layout_constraintTop_toBottomOf="@+id/tv_nama_inovasi" />

            <View
                android:id="@+id/tv_category_inovasi"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@color/placeholder_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/tv_nama_inovator"
                app:layout_constraintHorizontal_bias="0.01"
                app:layout_constraintStart_toEndOf="@id/card_image"
                app:layout_constraintTop_toBottomOf="@+id/tv_nama_inovator" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>