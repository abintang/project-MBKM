<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InovationMobile" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/header_bg</item>
        <item name="colorPrimaryVariant">@color/header_bg</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/header_bg</item>
    </style>

    <style name="FloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/shapeIcon</item>
    </style>

    <style name="shapeIcon" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerSize">20%</item>
    </style>

    <style name="shapeButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="cornerSize">20%</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/monstserrat_semibold</item>
    </style>
    <style name="Theme.InovationMobile.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.InovationMobile.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.InovationMobile.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="customize_search" parent="@style/Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:singleLine">true</item>
        <item name="android:radius">5dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/custom_search</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="Theme.InovationMobile">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

</resources>